<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <Space
        android:id="@+id/profile_space"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <TextView
        android:id="@+id/profil_player"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/twMatchPlayed"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/profile_label_matches_played"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/twMatchWon"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/profile_label_matches_won"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/twMostPlayedWith"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/profile_label_most_played_with"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/twMostWonWith"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/profile_label_most_won_with"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/twMostVariant"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/profile_label_most_variants"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/twQuote"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/profile_label_quote"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>
