<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twProfileTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/profileTitle"
            android:textSize="30sp"
            android:textStyle="normal|bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPlayerID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twPlayerID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="@string/player_id_label"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="normal|bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLastName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twLastName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="@string/last_name_label"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFirstName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twFirstName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="@string/first_name_label"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twRank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="@string/rank_label"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="0.16"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/roundedbutton"
            android:onClick="viewMenu"
            android:text="@string/menu"/>

        <Button
            android:id="@+id/ranking_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/roundedbutton"
            android:text="@string/ranking"/>

        <Button
            android:id="@+id/statistics_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/roundedbutton"
            android:text="@string/stats"/>

    </LinearLayout>

</LinearLayout>
